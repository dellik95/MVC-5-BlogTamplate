@model MVC_5_BlogTamplate.ViewModel.GigsFormViewModel
@{
    ViewBag.Title = "Create Gig";
}

<h2>Create</h2>

@using (Html.BeginForm("Create", "Gigs"))
{
    @Html.AntiForgeryToken()
    <div class="form-group">
        @Html.LabelFor(l => l.Vanue)
        @Html.TextBoxFor(t => t.Vanue, new { @class = "form-control" })
        @Html.ValidationMessageFor(m=>m.Vanue)
    </div>
    <div class="form-group">
        @Html.LabelFor(l => l.Date)
        @Html.TextBoxFor(t => t.Date, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Date)

    </div>
    <div class="form-group">
        @Html.LabelFor(l => l.Time)
        @Html.TextBoxFor(t => t.Time, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Time)

    </div>
    <div class="form-group">
        @Html.LabelFor(l => l.Genre)
        @Html.DropDownListFor(m => m.Genre, new SelectList(Model.Genres, "Id", "Name"), "", new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Genre)


    </div>
    <button class="btn btn-primary" type="submit">Create Gig</button>
}
@section scripts
{
    @Scripts.Render("~/bundles/jqueryval")
}

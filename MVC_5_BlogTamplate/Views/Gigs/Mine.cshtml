@model List<MVC_5_BlogTamplate.Models.Gig>

@{
    ViewBag.Title = "My Upcoming Gigs";
}

<h2>My Upcoming Gigs</h2>


<ul class="gigs vertical-offset4">
    @foreach (var gig in Model)
    {
        <li>
            <div class="date">
                <div class="month">
                    @gig.DateTime.ToString("MMM")
                </div>
                <div class="day">
                    @gig.DateTime.ToString("d ")

                </div>
            </div>
            <div class="details">
                <span class="artist">
                    @gig.Vanue
                </span>
                <span class="genre">
                    @gig.Genre.Name
                </span>
                <div class="actions">
                    <a href="@Url.Action("Edit", "Gigs", new {id = gig.Id})">Edit</a>|
                    <a href="#" class="js-cancel-gig" data-gig-id="@gig.Id">Edit</a>

                </div>
            </div>
        </li>
    }
</ul>

@section scripts
{
    <script>
        $(document).ready(function () {
            $(".js-cancel-gig").click(function (e) {
                let link = $(e.target);
                bootbox.dialog({
                    title: 'Confirm',
                    message: "<p>Are you Sure you waant delete a Gig?.</p>",
                    buttons: {
                        no: {
                            label: "No",
                            className: 'btn-default',
                            callback: function () {
                                bootbox.hideAll();
                            }
                        },
                        yes: {
                            label: "Yes",
                            className: 'btn-warning',
                            callback: function () {
                                $.ajax({
                                    url: `/api/gigs/${link.attr("data-gig-id")}`,
                                    method: "DELETE"
                                })
                                    .done(function () {
                                        link.parents("li").fadeOut(function () {
                                            $(this).remove();
                                        });
                                    })
                                    .fail(function () {
                                        bootbox.alert("Somthing is Faild");
                                    });
                            }
                        }

                    }
                });
            });
        });

    </script>}